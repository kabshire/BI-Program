library(ape)
setwd("~/desktop/ncbi_dataset/mrbayes")

data = read.nexus("cox1_gene_aln_mb.nex.con.tre")
plot(data)
rerooted = root(data, outgroup = "NC_005827.1_59-1603", resolve.root = "TRUE")
is.rooted(rerooted)
plot(rerooted)
write.nexus(rerooted, file = "cox1_gene.rooted.mrbayes.nex", translate = TRUE)
write.tree(rerooted, file = "cox1_gene.rooted.mrbayes.tre")
